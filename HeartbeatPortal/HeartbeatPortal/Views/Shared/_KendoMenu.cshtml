@{
    Layout = null;
}

@model HeartBeatPortal.Models.ServerServiceMethodInfoModel

@(Html.Kendo().PanelBar()
              .Name("panelbar")
              .ExpandMode(PanelBarExpandMode.Multiple)
              .HtmlAttributes(new { style = "width:100%" })
              .Items(panelbar =>
              {
                  panelbar.Add().Text("Servers")
                      .Items(servers =>
                      {
                          foreach (var machineName in Model.ServerName)
                              servers.Add().Text(machineName);
                      });

                  panelbar.Add().Text("Services")
                      .Items(services =>
                      {
                          foreach (var applicationName in Model.ServiceName)
                          {
                              services.Add().Text(applicationName);
                          }
                      });

                  panelbar.Add().Text("Methods")
                      .Items(methods =>
                      {
                          foreach (var methodName in Model.MethodName)
                          {
                              methods.Add().Text(methodName);
                          }
                      });

              })
)
